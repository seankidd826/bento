<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="row banner">
        <div class="col-xs-6 col-xs-offset-3">
          <h1>Hello World!!</h1>
        </div>
      </div>
      <div class="row story">
        <div class="image col-xs-4 col-xs-offset-1"></div>
        <div class="col-xs-4 col-xs-offset-4 descirbe"></div>
      </div>
      <div class="row">
        <div class="subscribe col-xs-12">
          <div class="col-xs-4 menu">
            <ul>
              <h1>排骨飯</h1>
              <li>jjj</li>
              <li>lqwqlwk</li>
              <li>kkjkj</li>
              <li>kshdkjhs</li>
            </ul>
          </div>
          <div class="col-xs-4 col-xs-offset-8">
            <div class="form-group">
              <%= link_to "#", :data => {:toggle=>"modal", :target => "#mymodal"}, :class => "btn btn-primary" do %>
              <%= icon("pencil") %>Book
              <% end %>
            </div>
          </div>


          <!-- For really book button -->
          <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h2 class="modal-title" id="myModalLabel">訂購資料</h2>
                </div>
                <div class="modal-body text-center">
                  <% @menus.each do |m| %>
                  <%= form_for @order,:url => menu_orders_path(m) do |order| %>
                  <%= m.title %>
                  <%= order.label :name,"姓名" %>
                  <%= order.text_field order.name,:placeholder => "Your name" %>
                  <%#= order.label :phone,"電話" %>
                  <%#= order.text_field :order.phonw, :placeholder => "Your phone" %>
                  <%#= order.label :address,"住址" %>
                  <%#= order.text_field :order.address, :placeholder => "Your address" %>
                  <%#= order.label :menu_count,"數量" %>
                  <%#= order.text_field :menu_count %>
                  <%#= order.label :total_price,"總價" %>
                  <%#= order.total_price %>
                </div>
                <div class="modal-footer">
                  <div class="text-left">
                    <!-- <span class="h2"> <%#= order.submit "送出訂單", :class => "btn btn-primary" %></span> -->
                  </div>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                </div>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>